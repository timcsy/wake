// 打開燈光（light_on）
{
	"device": "light",
  "command": "on"
}

// 關閉燈光（light_off）
{
	"device": "light",
  "command": "off"
}

// 調整燈光亮度（light_brightness）
{
  "device": "light",
  "command": "set_brightness",
  "parameters": { "brightness": 75 }
}

// 閃光燈模式（light_flash）
{
  "device": "light",
  "command": "flash"
}

// 停止馬達（motor_off）
{
  "device": "motor",
  "command": "off"
}

// 開啟馬達（motor_on）
{
  "device": "motor",
  "command": "on"
}

// 馬達以 x% 速度運轉（motor_speed）
{
  "device": "motor",
  "command": "set_speed",
  "parameters": { "speed" : 50 }
}

// 開啟鬧鐘（clock_on）
{
  "device": "clock",
  "command": "on"
}

// 關閉鬧鐘（clock_off）
{
  "device": "clock",
  "command": "off"
}

// 標示用戶已起床（get_up）
{
  "device": "you",
  "command": "up"
},

// 標示用戶尚未起床（not_get_up）
{
  "device": "you",
  "command": "down"
}

// 賴床（sleep_again）
{
  "device": "you",
  "command": "sleep_again",  // 賴床指令
  "parameters": 
  {
    "duration": 300  // 賴床時間，以秒為單位
  }
}

