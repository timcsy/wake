// 打開燈光
{
	"device": "light",
  "command": "on"
}

// 關閉燈光
{
	"device": "light",
  "command": "off"
}

// 調整燈光亮度
{
  "device": "light",
  "command": "set_brightness",
  "parameters": { "brightness": 75 }
}

// 閃光燈模式
{
  "device": "light",
  "command": "flash"
}

// 停止馬達
{
  "device": "motor",
  "command": "off"
}

// 開啟馬達
{
  "device": "motor",
  "command": "on"
}

// 馬達以 x% 速度運轉
{
  "device": "motor",
  "command": "set_speed",
  "parameters": { "speed" : 50 }
}

// 鬧鐘控制
{ "device": "clock", "command": "on" },   // 開啟鬧鐘
{ "device": "clock", "command": "off" },  // 關閉鬧鐘

// 偵測裝置
{ "device": "eye", "command": "on" },    // 開啟眼睛偵測
{ "device": "eye", "command": "off" },   // 關閉眼睛偵測

{ "device": "pose", "command": "on" },   // 開啟坐姿偵測
{ "device": "pose", "command": "off" },  // 關閉坐姿偵測

{ "device": "pillow", "command": "on" }, // 開啟棉被偵測
{ "device": "pillow", "command": "off" },// 關閉棉被偵測

{ "device": "speech", "command": "on" }, // 開啟語音偵測
{ "device": "speech", "command": "off" },// 關閉語音偵測

// 喚醒裝置

{ "device": "feather", "command": "on" },  // 開啟羽毛喚醒
{ "device": "feather", "command": "off" }, // 關閉羽毛喚醒

{ "device": "push", "command": "on" },     // 開啟推喚醒
{ "device": "push", "command": "off" },    // 關閉推喚醒

{ "device": "stamp", "command": "on" },    // 開啟戳喚醒
{ "device": "stamp", "command": "off" }    // 關閉戳喚醒

// 起床狀態

{ "device": "you", "command": "up" },   // 標示用戶已起床
{ "device": "you", "command": "down" }  // 標示用戶尚未起床


{
  "device": "you",
  "command": "sleep_again",  // 賴床指令
  "parameters": 
  {
    "duration": 5  // 賴床時間，以分鐘為單位
  }
}