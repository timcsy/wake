// 打開燈光
{
	"device": "light",
  "command": "on"
}

// 關閉燈光
{
	"device": "light",
  "command": "off"
}

// 調整燈光亮度
{
  "device": "light",
  "command": "set_brightness",
  "parameters": { "brightness": 75 }
}

// 閃光燈模式
{
  "device": "light",
  "command": "flash"
}

// 停止馬達
{
  "device": "motor",
  "command": "off"
}

// 開啟馬達
{
  "device": "motor",
  "command": "on"
}

// 馬達以 x% 速度運轉
{
  "device": "motor",
  "command": "set_speed",
  "parameters": { "speed" : 50 }
}

[
  // 鬧鐘控制
  { "device": "clock", "command": "on" },   // 開啟鬧鐘
  { "device": "clock", "command": "off" },  // 關閉鬧鐘

  // 偵測裝置
  { "device": "eye_detect", "command": "on" },    // 開啟眼睛偵測
  { "device": "eye_detect", "command": "off" },   // 關閉眼睛偵測

  { "device": "pose_detect", "command": "on" },   // 開啟坐姿偵測
  { "device": "pose_detect", "command": "off" },  // 關閉坐姿偵測

  { "device": "pillow_detect", "command": "on" }, // 開啟棉被偵測
  { "device": "pillow_detect", "command": "off" },// 關閉棉被偵測

  { "device": "speech_detect", "command": "on" }, // 開啟語音偵測
  { "device": "speech_detect", "command": "off" },// 關閉語音偵測

  // 喚醒裝置
  { "device": "light_wake", "command": "on" },    // 開啟強光喚醒
  { "device": "light_wake", "command": "flash" }, // 強光閃爍喚醒
  { "device": "light_wake", "command": "off" },   // 關閉強光喚醒

  { "device": "motor_wake", "command": "on" },    // 開啟敲打喚醒
  { "device": "motor_wake", "command": "off" },   // 關閉敲打喚醒

  { "device": "feather_wake", "command": "on" },  // 開啟羽毛喚醒
  { "device": "feather_wake", "command": "off" }, // 關閉羽毛喚醒

  { "device": "push_wake", "command": "on" },     // 開啟推喚醒
  { "device": "push_wake", "command": "off" },    // 關閉推喚醒

  { "device": "stamp_wake", "command": "on" },    // 開啟戳喚醒
  { "device": "stamp_wake", "command": "off" }    // 關閉戳喚醒
]
